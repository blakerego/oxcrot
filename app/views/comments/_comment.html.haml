.comment.image_block 
  .img.avatar 
    = image_tag "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(comment.email)}" if comment.email.present?
  .block
    .header.name
      = "#{comment.name}:"
    %span.content
      = comment.content
    .date
      = "#{time_ago_in_words(comment.created_at)} ago"
