
.main_grid.row
  - @posts.first(8).each do |post|
    .post.col-md-6
      .title
        %h1
          = post['title']
        .excerpt
          = trim_excerpt(post)
        .date
          = post_date(post)
      .post_image
        = image_tag extract_first_image_from_post(post)

:javascript
  $(window).load(function(){
    var container = $('.main_grid');
    var gutter = parseInt( jQuery( '.post' ).css( 'marginBottom' ) );
    var msnry = container.masonry({
      itemSelector: '.post', 
      columnWidth: '.post'});
    $('.main_grid').css({'visibility': 'visible'});
  });