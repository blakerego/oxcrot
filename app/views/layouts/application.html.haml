!!! 5

%html
  %head
    %title Happily Adrift
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
  %body
    .navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          %button.navbar-toggle.icon-double-angle-down{"data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.row
            %li.col-md-2.col-md-offset-2
              = link_to 'Home', root_path, "data-current" => root_path == request.env['PATH_INFO'], :class => "header_link"
            / %li.col-md-2, "data-current" => request.env['PATH_INFO'] == '/places'
            /   = link_to 'Places', '/places', "data-current" => '/places', :class => "header_link"
            %li.col-md-2
              = link_to 'About', '/about', "data-current" => request.env['PATH_INFO'] == '/about', :class => "header_link"
            %li.col-md-2
              = link_to 'Resources', '/resources', "data-current" => request.env['PATH_INFO'] == '/resources', :class => "header_link"
            %li.col-md-2
              = link_to 'Contact', '/contact', "data-current" => request.env['PATH_INFO'] == '/contact', :class => "header_link"
    .header_title
      .title
        Happily Adrift
      .subtitle
        A digital nomad couple traveling the world.
    .separator


    .body
      -if notice.present?
        %p.notice= notice 
      - if alert.present?
        %p.alert.alert-info= alert 
    
      = yield

